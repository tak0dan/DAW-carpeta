package Tema_5;
import java.util.Scanner;
import java.util.Random;
public class cfgedgher {
	public static void main(String[] args) {
		Scanner tec = new Scanner(System.in);
		Random r = new Random();
		boolean temp_b = false;
		int TAM = 0;
		String concat_v1 = "";
		String concat_v2 = "";
		String concat_v3 = "";
		do {
			System.out.println("Introduce length of the arrays.");
			if(tec.hasNextInt()) {
				temp_b = false;
				int temp = tec.nextInt();
				if(temp > 1) {
					TAM = temp;
					temp_b = true;
				}
			}
		}while(!temp_b);
		int v1[] = new int[TAM];
		int v2[] = new int[TAM];
		int v3[] = new int[TAM];

		for(int i=0; i<TAM; i++) {
			v1[i] = r.nextInt(-30,30);
			v2[i] = r.nextInt(-30,30);
			v3[i] = v1[i]+v2[i];
			if(v1[i]<10&&v1[i]>-1) {
				concat_v1 = concat_v1 + "[  "+v1[i]+"  ]   ";
			}else if(v1[i]>10||(v1[i]>=-10&&v1[i]<0)){
				concat_v1 = concat_v1 + "[ "+v1[i]+"  ]   ";
			}else {
				concat_v1 = concat_v1 + "[ "+v1[i]+" ]   ";
			}
			

			
			if(v2[i]<10&&v2[i]>-1) {
				concat_v2 = concat_v2 + "[  "+v2[i]+"  ]   ";
			}else if(v2[i]>10||(v2[i]>=-10&&v2[i]<0)){
				concat_v2 = concat_v2 + "[ "+v2[i]+"  ]   ";
			}else {
				concat_v2 = concat_v2 + "[ "+v2[i]+" ]   ";
			}
			
			
			
			if(v3[i]<10&&v3[i]>-1) {
				concat_v3 = concat_v3 + "[  "+v3[i]+"  ]   ";
			}else if(v3[i]>10||(v3[i]>=-10&&v3[i]<0)){
				concat_v3 = concat_v3 + "[ "+v3[i]+"  ]   ";
			}else {
				concat_v3 = concat_v3 + "[ "+v3[i]+" ]   ";
			}
		}
		System.out.println("v1 = "+concat_v1);
		System.out.println("+");
		System.out.println("v1 = "+concat_v2);
		System.out.println("=");
		System.out.println("v1 = "+concat_v3);
	}
}
