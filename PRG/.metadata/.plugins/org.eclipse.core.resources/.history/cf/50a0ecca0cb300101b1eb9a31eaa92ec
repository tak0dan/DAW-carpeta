package Tema_3.Tareas3_4;

import java.util.Scanner;

public class cuadrdvco {
    public static void main(String[] args) {
    	Scanner tec = new Scanner(System.in);
        int FIN = tec.nextInt();

        for (int i = 0; i < FIN; i++) {
            for (int j = 0; j < FIN; j++) {

                int distance = Math.min(Math.min(i, j), Math.min(FIN - 1 - i, FIN - 1 - j));

                if (distance % 2 == 0) {
                    System.out.print("* ");
                } else {
                    System.out.print("  ");
                }
            }
            System.out.println();
        }
    }
}
