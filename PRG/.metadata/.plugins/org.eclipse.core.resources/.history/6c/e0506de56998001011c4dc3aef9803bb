package Tema_2;
import java.util.Scanner;
public class Letras_Mayusculas {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Introduzca tu palabra para el analisis");
		String texto = scanner.nextLine();
		boolean equals_l = texto.equals(texto.toUpperCase());
		if(equals_l = true) {
			System.out.println("Las letras estan en mayusculas");
		}else {
			System.out.println("Las letras estan en minusculas");

		}
		
	}
}
