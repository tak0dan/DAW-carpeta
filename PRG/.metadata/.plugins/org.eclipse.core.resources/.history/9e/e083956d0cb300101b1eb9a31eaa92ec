package Tema_3.Tareas3_4;

import java.util.Scanner;

public class cuadrdvco {
    public static void main(String[] args) {
    	Scanner tec = new Scanner(System.in);
        int FIN = tec.nextInt(); 

        for (int i = 0; i < FIN; i++) {
            for (int j = 0; j < FIN; j++) {
                boolean isStar = false;
                for (int layer = 0; layer <= FIN / 2; layer += 2) {
                    if (i == layer || i == FIN - 1 - layer ||
                        j == layer || j == FIN - 1 - layer) {
                        isStar = true;
                        break;
                    }
                }

                System.out.print(isStar ? "* " : "  ");
            }
            System.out.println();
        }
    }
}
