package Examen_Bucles;
import java.util.Random;
import java.util.Scanner;
public class Ej_3 {
	public static void main(String[] args) {
		Scanner tec = new Scanner(System.in);
		Random r = new Random();
		boolean n = false;
		int km;
		int km_total = 0;
		double DIST = 0;
		double DIAS_D = 0;
		while (!n) {
            System.out.println("Introduce la distancia objetivo entre 50 y 100 (en kilometros).");
            if (tec.hasNextInt()) {
                DIST = tec.nextInt();
                if (DIST>=50&&DIST<=100) n=true;
            } else {
            	System.out.println("No es valor correcto!");
            	System.out.println("Prueba de nuevo:");
                tec.next();
            }
        }
		
		System.out.println(DIAS_D);
		while (!n) {
            System.out.println("¿Cuántos días entrenarás para intentar acercarte lo máximo a esa distancia sin superarla?");
            if (tec.hasNextInt()) {
            	DIAS_D = tec.nextInt();
                if (DIAS_D>=50&&DIAS_D<=100) n=true;
            } else {
            	System.out.println("No es valor correcto!");
            	System.out.println("Prueba de nuevo:");
            }
        }
		
		
		for(int i = 0; i<DIAS_D; i++) {
			km = r.nextInt(5, 16);  

			System.out.println("Dia "+(DIAS_D+1)+" has alcanzado "+km+" kilometros.");
			DIST = DIST-km;
			km_total = km_total + km;
			System.out.println("Te quedan "+DIST+" kilometros.");
		}
		System.out.println("Has alcanzado "+km_total+"km en total.");
		if(DIST <0) {
			System.out.println("Has superado la meta.\n Has perdido. Prueba de nuevo)");

		}else {
			System.out.println("No has superado la distancia objetivo.\n Muy bien! \n Has ganado!");
		}
	}
}
