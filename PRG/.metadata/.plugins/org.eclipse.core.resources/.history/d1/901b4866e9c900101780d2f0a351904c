public static void llenarArrayRandom(int[] v, int min, int max) {
    Random r = new Random();
    for (int i = 0; i < v.length; i++) {
        v[i] = r.nextInt(max - min + 1) + min;
    }
}

public static void bubbleSort(int arr[])
{
    int n = arr.length;
    for (int i = 0; i < n-1; i++)  {
        for (int j = 0; j < n-i-1; j++) {
            if (arr[j] > arr[j+1])
            {
                // intercambio arr[j+1] y arr[j]
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
    for (int n1: arr) {
		System.out.print(n1 + "  ");
	
	}
	System.out.println();
}
System.out.println();}

 }




public class Timsort2 {

    private static final int RUN = 32;

    // Insertion sort on a subarray
    private static void insertionSort(int[] arr, int left, int right) {
        for (int i = left + 1; i <= right; i++) {
            int temp = arr[i];
            int j = i - 1;
            while (j >= left && arr[j] > temp) {
                arr[j + 1] = arr[j];
                j--;
            }
            arr[j + 1] = temp;
        }
    }

    // Merge two sorted subarrays
    private static void merge(int[] arr, int l, int m, int r) {
        int len1 = m - l + 1;
        int len2 = r - m;

        int[] left = new int[len1];
        int[] right = new int[len2];

        System.arraycopy(arr, l, left, 0, len1);
        System.arraycopy(arr, m + 1, right, 0, len2);

        int i = 0, j = 0, k = l;

        while (i < len1 && j < len2) {
            arr[k++] = (left[i] <= right[j]) ? left[i++] : right[j++];
        }

        while (i < len1) arr[k++] = left[i++];
        while (j < len2) arr[k++] = right[j++];
    }

    // Main Timsort function with parallel RUN sorting and optional parallel merging
    public static void timsort(int[] arr) throws InterruptedException, ExecutionException {
        int n = arr.length;
        int cores = Runtime.getRuntime().availableProcessors();
        ExecutorService pool = Executors.newFixedThreadPool(cores);
        List<Callable<Void>> tasks = new ArrayList<>();

        // Phase 1: sort RUN blocks in parallel
        for (int i = 0; i < n; i += RUN) {
            final int left = i;
            final int right = Math.min(i + RUN - 1, n - 1);
            tasks.add(() -> { insertionSort(arr, left, right); return null; });
        }
        pool.invokeAll(tasks);

        // Phase 2: merge sorted runs (sequentially for simplicity; can be parallelized)
        for (int size = RUN; size < n; size *= 2) {
            for (int left = 0; left < n; left += 2 * size) {
                int mid = left + size - 1;
                int right = Math.min(left + 2 * size - 1, n - 1);
                if (mid < right) {
                    merge(arr, left, mid, right);
                }
            }
        }

        pool.shutdown();
        pool.awaitTermination(1, TimeUnit.HOURS);
    }
}




