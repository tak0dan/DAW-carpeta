package Examen_Bucles;
import java.util.Scanner;
public class Ej_1 {
	public static void main(String[] args) {
		Scanner tec = new Scanner(System.in);
		boolean b = false;
		int temp = 0;

		while (!b) {
			System.out.println("Que quieres hacer?");
			System.out.println("1. Convertir euros a d√≥lares.");
			System.out.println("2. Convertir euros a libras. ");
			System.out.println("3. Salir.");	            
			if (tec.hasNextInt()) {
				temp = tec.nextInt();
				if (temp==1||temp==2||temp==3) b=true;
			} else {
				tec.next();
			}
			switch(temp) {
			case 1:
				System.out.println("Dime la cantidad de conversion.");
				double cantidad = tec.nextDouble();
				System.out.println("El resultado de conversion de "+cantidad+" euros a dolares = " + (1.153*cantidad)+"dolares");
				b=false;
				break;
			case 2:
				System.out.println("Dime la cantidad de conversion.");
				double cantidad1 = tec.nextDouble();
				System.out.println("El resultado de conversion de "+cantidad1+" euros a libras = " + (1.153*cantidad1)+"dolares");
				b=false;
				break;
			}
		}

		


		System.out.println(temp);
	}
}
