package Examen_Bucles;
import java.util.Scanner;
public class Ej_1 {
	public static void main(String[] args) {
		Scanner tec = new Scanner(System.in);
		boolean b = false;
		int temp = 0;
		boolean n = false;
		while (temp==1||temp==2||temp==3) {
			System.out.println("Que quieres hacer?");
			System.out.println("1. Convertir euros a d√≥lares.");
			System.out.println("2. Convertir euros a libras. ");
			System.out.println("3. Salir.");	            
			if (tec.hasNextInt()) {
				temp = tec.nextInt();
				if (temp==1||temp==2||temp==3) b=true;
				
			} else {
				tec.next();
			}
			switch(temp) {
			case 1:
				System.out.println("Dime la cantidad de conversion.");
				double cantidad = 0;
				while (!n) {
					if (tec.hasNextDouble()) {
						cantidad = tec.nextDouble();
						n=true;
					} else {
						System.out.println("No es el valor correcto");
						System.out.println("Prueba de nuevo:");
						tec.next();
					}
				}				
				System.out.println("El resultado de conversion de "+cantidad+" euros a dolares = " + (1.153*cantidad)+" dolares");
				b=false;
				n=false;
				System.out.println("\n\n\n");

				break;
			case 2:
				System.out.println("Dime la cantidad de conversion.");
				double cantidad1 = 0;
				while (!n) {
					if (tec.hasNextDouble()) {
						cantidad1 = tec.nextDouble();
						n=true;
					} else {
						System.out.println("No es el valor correcto");
						System.out.println("Prueba de nuevo:");
						tec.next();
					}
				}

				System.out.println("El resultado de conversion de "+cantidad1+" euros a libras = " + (1.153*cantidad1)+" libras");
				b=false;
				n=false;
				System.out.println("\n\n\n");
				break;
			case 3:
				System.out.println("Hasta luego)");
				break;
			default:
				System.out.println("No es la opcion correcta");
			}
		}


		tec.close();

	}
}
