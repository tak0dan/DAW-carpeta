public class Tarea_2_3_1 {
		public static void main(String[] args){
			Scanner scanner = new Scanner(System.in);
			
			System.out.println("Dame aldun String");
			String algun_String = scanner.nextLine();
			System.out.println("Dame algun int. Pero ten en cuenta que no debe ser mas alto de la longtitud");
			int algun_int = scanner.nextInt();
			if(!(algun_int>algun_String.length()-1)) {
				System.out.println("Felicidades en esta posici√≥n tienes el caracter " + algun_String.charAt(algun_int));
			}else {
				System.out.println("Te he dicho que el int sera menor que la longtitud");
			}
			
	}
}

